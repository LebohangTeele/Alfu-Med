<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_overall_style_background"
    android:orientation="vertical" >

    
    <LinearLayout 
          android:id="@+id/alarm_clock_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        
        >
        <RelativeLayout
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/alarm_clock_time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_alarm_clock"
            android:gravity="left|center"
            android:text=" 08:00"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <Switch
            android:id="@+id/enable_alarm_clock_switch"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center|right"
            android:textColor="@android:color/black"
            android:textSize="20dp" />
    </RelativeLayout>

     <TextView
            android:id="@+id/repeat_days_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:text=" Sun,Sat,Mon"
            android:textSize="14dp" />
   

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/enable_editing_alarm_clock"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:background="#FF8000" />
        
    </LinearLayout>
    

    <LinearLayout
        android:id="@+id/alarm_clock_setting_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_overall_style_background"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="2dp" >

        <TimePicker
            android:id="@+id/alarm_clock_time_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Repeat:"
            android:textSize="18dp" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/underscore_view_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:paddingBottom="30dp" >

            <CheckedTextView
                android:id="@+id/sundayCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/chk_indicator"
                android:padding="10dp"
                android:text="Sun"
                android:textSize="10sp" />

            <CheckedTextView
                android:id="@+id/mondayCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/chk_indicator"
                android:padding="10dp"
                android:text="Mon"
                android:textSize="10sp" />

            <CheckedTextView
                android:id="@+id/tuesdayCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/chk_indicator"
                android:padding="10dp"
                android:text="Tue"
                android:textSize="10sp" />

            <CheckedTextView
                android:id="@+id/wednesdayCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/chk_indicator"
                android:padding="10dp"
                android:text="Wed"
                android:textSize="10sp" />

            <CheckedTextView
                android:id="@+id/thursdayCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/chk_indicator"
                android:padding="10dp"
                android:text="Thu"
                android:textSize="10sp" />

            <CheckedTextView
                android:id="@+id/fridayCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/chk_indicator"
                android:padding="10dp"
                android:text="Fri"
                android:textSize="10sp" />

            <CheckedTextView
                android:id="@+id/saturdayCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/chk_indicator"
                android:padding="10dp"
                android:text="Sat"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>